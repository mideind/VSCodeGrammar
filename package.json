{
    "name": "grammar",
    "displayName": "Greynir grammar",
    "description": "Syntax coloring for Greynir grammar files",
    "version": "0.0.2",
    "publisher": "Mideind",
    "repository": {
        "type": "git",
        "url": "https://github.com/mideind/VSCodeGrammar.git"
    },
    "homepage": "https://github.com/mideind/VSCodeGrammar/blob/master/README.md",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "grammar",
            "aliases": ["Greynir grammar", "grammar"],
            "extensions": [".grammar"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "grammar",
            "scopeName": "source.grammar",
            "path": "./syntaxes/grammar.tmLanguage"
        }]
    }
}
